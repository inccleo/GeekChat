.popupBox {
  width: 100%;
  padding: 50rpx 40rpx 30rpx;
}
.popupBox .h2 {
  color: #333;
  font-size: 32rpx;
}
.popupBox .h3 {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  padding-top: 14rpx;
}
.popupBox .bold {
  font-weight: bold;
}
.popupBox .form {
  margin-top: 30rpx;
  border-top: 1px solid #EFEFEF;
}
.popupBox .form .input {
  padding: 24rpx 0;
  border-bottom: 1px solid #EFEFEF;
}
.popupBox .form .input .info {
  flex: 1;
  margin-left: 30rpx;
}
.popupBox .form .input .info .avatar-wrapper {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
}
.popupBox .form .input .info .avatar-wrapper .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
}
.popupBox .form .input .info button {
  padding: 0;
  background-color: #fff;
  border: 0;
  tap-highlight-color: rgba(0, 0, 0, 0);
  tap-highlight-color: transparent;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-tap-highlight-color: transparent;
  border-radius: 0;
}
.popupBox .form .input .info button::after {
  border: 0;
  border-radius: 0;
}
.popupBox .form .input .info input {
  background: transparent;
  width: 100%;
  height: 70rpx;
  color: #333;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
}
.submit {
  margin-top: 30rpx;
  width: 100%;
  height: 92rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  font-size: 32rpx;
  background: #E83F3C;
}

